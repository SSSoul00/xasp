<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kclm.xsap.mapper.TEmployeeMapper">
  <resultMap id="TEmployeeMap" type="com.kclm.xsap.entity.TEmployee">
    <!--@mbg.generated-->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="sex" jdbcType="VARCHAR" property="sex" />
    <result column="birthday" jdbcType="DATE" property="birthday" />
    <result column="introduce" jdbcType="VARCHAR" property="introduce" />
    <result column="avatar_url" jdbcType="VARCHAR" property="avatarUrl"/>
    <result column="note" jdbcType="VARCHAR" property="note" />
    <result column="role_name" jdbcType="VARCHAR" property="roleName" />
    <result column="role_password" jdbcType="VARCHAR" property="rolePassword" />
    <result column="role_type" jdbcType="BOOLEAN" property="roleType" />
    <result column="role_email" jdbcType="VARCHAR" property="roleEmail" />
    <result column="is_deleted" jdbcType="BOOLEAN" property="isDeleted" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="last_modify_time" jdbcType="TIMESTAMP" property="lastModifyTime" />
    <result column="version" jdbcType="INTEGER" property="version" />
  </resultMap>
  <sql id="TEmployee_Column_List">
    <!--@mbg.generated-->
    id, `name`, phone, sex, birthday, introduce, avatar_url, note, role_name, role_password, role_type, 
    role_email, is_deleted, create_time, last_modify_time, version
  </sql>
  <!--新增用户  -->
  <insert id="save" parameterType="com.kclm.xsap.entity.TEmployee">
  	insert into t_employee(role_name,role_password) values(#{roleName},#{rolePassword});
  </insert>
  <!--查询所有用户  -->
	<select id="findAll" resultMap="TEmployeeMap">
		select * from t_employee;
	</select>
	<!-- 根据id查询用户 -->
	<select id="findById" parameterType="int" resultMap="TEmployeeMap">
		select * from t_employee where id=#{id};
	</select>
	<!-- 根据用户名查询用户 -->
	<select id="findByUserName" parameterType="String" resultMap="TEmployeeMap">
		select * from t_employee where phone like #{phone};
	</select>
	<!-- 根据用户名(手机号)和密码查询用户 -->
	<select id="findByNameAndPwd" parameterType="String" resultMap="TEmployeeMap">
		select * from t_employee where phone = #{phone} and role_password = #{rolePassword};
	</select>
  
  <!-- 上课记录 -->
  <resultMap id="classViewMap" type="com.kclm.xsap.dto.ClassRecordDTO" >
  	<id column="id" jdbcType="BIGINT" property="classRecordId" />
 	<result column="name" jdbcType="VARCHAR" property="courseName" />
    <result column="start_date" jdbcType="DATE" property="startDate" />
    <result column="class_time" jdbcType="TIME" property="startTime" />
    <result column="card_name" jdbcType="VARCHAR" property="cardName" />
    <result column="times_cost" jdbcType="INTEGER" property="timesCost" />
  </resultMap>
  
  <select id="listClassView" resultMap="classViewMap">
  	SELECT class.id, course.`name`, schedules.`start_date`, schedules.`class_time`,
 class.`card_name`, course.times_cost
 FROM t_class_record class 
 LEFT JOIN t_schedule_record schedules ON class.`schedule_id` = schedules.`id` 
 LEFT JOIN t_member_card card ON card.`name` = class.`card_name`
 LEFT JOIN t_course course ON course.`id` = schedules.`course_id` 
 WHERE card.`status` = 0 AND class.`reserve_check` = 1  
 AND schedules.`teacher_id` = #{teacherId};
  </select>
</mapper>