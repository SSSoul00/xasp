<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kclm.xsap.dao.MemberCardDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kclm.xsap.entity.MemberCardEntity" id="memberCardMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="description" column="description"/>
        <result property="note" column="note"/>
        <result property="type" column="type"/>
        <result property="totalCount" column="total_count"/>
        <result property="totalDay" column="total_day"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="lastModifyTime" column="last_modify_time"/>
        <result property="version" column="version"/>
    </resultMap>
    <select id="selectCardList" resultType="com.kclm.xsap.entity.MemberCardEntity">
        select id,id, name, price, description, note, type, total_count, total_day, status, create_time, last_modify_time, version from t_member_card
        where id in
        <foreach collection="cardIds" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>


</mapper>