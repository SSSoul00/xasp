<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kclm.xsap.dao.MemberDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kclm.xsap.entity.MemberEntity" id="memberMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <result property="phone" column="phone"/>
        <result property="birthday" column="birthday"/>
        <result property="note" column="note"/>
        <result property="avatarUrl" column="avatar_url"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="lastModifyTime" column="last_modify_time"/>
        <result property="version" column="version"/>
    </resultMap>
    <select id="selectMemberVoList" resultType="com.kclm.xsap.vo.MemberVo">
        SELECT t1.`name`,t1.`phone`,t1.`sex`,t3.`name`
        FROM (t_member t1 LEFT JOIN t_member_bind_record t2 ON t1.`id` = t2.`member_id`)
                 LEFT JOIN t_member_card t3 ON t2.`card_id` = t3.`id`
        ORDER BY t2.`create_time` DESC
    </select>


</mapper>